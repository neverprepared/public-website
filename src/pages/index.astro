---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Never Prepared</h1>
				<p class="tagline">There's no time like the present to be caught unprepared.</p>
				<p>
					Nobody arrives prepared. We all got dropped into life believing we were ready.
					So let's wing it the way we always have.
				</p>
				<!-- <div class="cta">
					<a href="/in-the-news" class="button">In The News</a>
				</div> -->
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		max-width: 720px;
		margin: 4em auto;
		padding: 0 1em;
		text-align: center;
	}
	h1 {
		font-size: 3em;
		margin-bottom: 0.25em;
	}
	.tagline {
		font-size: 1.25em;
		font-style: italic;
		color: rgb(var(--gray));
		margin-bottom: 2em;
	}
	.hero p {
		font-size: 1.1em;
		line-height: 1.8;
		margin-bottom: 1em;
	}
	.cta {
		margin-top: 2em;
	}
	.button {
		display: inline-block;
		padding: 0.75em 1.5em;
		background: var(--accent);
		color: white;
		text-decoration: none;
		border-radius: 4px;
		font-weight: bold;
	}
	.button:hover {
		opacity: 0.9;
	}
</style>
